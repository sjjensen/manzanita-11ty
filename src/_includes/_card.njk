<article class="mb-12">
  <figure class="mb-4">
    <a href="{{ post.url }}"><img src="{{ post.data.featuredImage }}" alt="{{ post.data.alt }}"></a>
  </figure>
  <h3 class="font-bold text-lg sm:text-xl md:text-2xl mb-4"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
  {% if post.data.page.excerpt %}
    <p class=" md:text-lg lg:text-xl">{{ post.data.page.excerpt | safe }}<a href="{{ post.url }}"><span class="font-bold underline">Read more</span></a> </p>
  {% endif %}
</article>
